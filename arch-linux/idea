FROM sandrokeil/archlinux:latest
RUN pacman -Sy --noconfirm git openssh vim gnome-keyring libsecret \
    && pacman -Scc --noconfirm
RUN pacman -Sy --noconfirm python-pip \
    && pip install --upgrade \
       cfn-lint \
    && pacman -Scc --noconfirm
RUN pacman -Sy --noconfirm graphviz xmlstarlet \
    && pacman -Scc --noconfirm
RUN mkdir -p /opt/ideaIU && curl -L https://download.jetbrains.com/idea/ideaIU-2019.3.4.tar.gz | tar xzf - --strip-components=1 -C /opt/ideaIU
ENV PATH="/opt/ideaIU/jbr/bin:${PATH}"
ENTRYPOINT ["/opt/ideaIU/bin/idea.sh"]
